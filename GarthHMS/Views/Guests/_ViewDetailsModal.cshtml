@model GarthHMS.Core.DTOs.Guest.GuestDto

<div class="details-container">

    <!-- ======================
         INFORMACIÓN GENERAL
         ====================== -->
    <div class="section-card">
        <div class="section-header bg-success">
            <i class="fas fa-info-circle"></i> Información General
        </div>

        <div class="section-body">
            <div class="card shadow-sm rounded border-0">
                <div class="card-body py-4">

                    <div class="row align-items-center text-center text-md-start">

                        <!-- NOMBRE COMPLETO -->
                        <div class="col-md-4 mb-3 mb-md-0">
                            <div class="d-flex align-items-center justify-content-center justify-content-md-start">
                                <div class="me-3">
                                    <i class="fas fa-user fa-2x text-primary"></i>
                                </div>
                                <div>
                                    <div class="text-muted small">Nombre Completo</div>
                                    <div class="h5 fw-semibold mb-0">@Model.FullName</div>
                                </div>
                            </div>
                        </div>

                        <!-- TELÉFONO -->
                        <div class="col-md-4 mb-3 mb-md-0">
                            <div class="d-flex align-items-center justify-content-center justify-content-md-start">
                                <div class="me-3">
                                    <i class="fas fa-phone fa-2x text-success"></i>
                                </div>
                                <div>
                                    <div class="text-muted small">Teléfono Principal</div>
                                    <div class="h6 mb-0">@Model.Phone</div>
                                    @if (!string.IsNullOrEmpty(Model.PhoneSecondary))
                                    {
                                        <small class="text-muted">Alt: @Model.PhoneSecondary</small>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- EMAIL -->
                        <div class="col-md-4 text-center">
                            <div class="text-muted small">Email</div>
                            <div class="text-secondary">
                                @(string.IsNullOrEmpty(Model.Email) ? "No proporcionado" : Model.Email)
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- ======================
         ESTADÍSTICAS Y ESTADO
         ====================== -->
    <div class="section-card">
        <div class="section-header bg-primary">
            <i class="fas fa-chart-bar"></i> Estadísticas y Estado
        </div>

        <div class="section-body">
            <div class="row g-3 justify-content-center text-center">

                <!-- ESTANCIAS -->
                <div class="col-12 col-md-3">
                    <div class="info-card p-3 shadow-sm rounded h-100 d-flex flex-column align-items-center justify-content-center">
                        <div class="mb-2">
                            <i class="fas fa-bed fa-2x text-primary"></i>
                        </div>
                        <div class="small text-muted">Total de Estancias</div>
                        <div class="h4 mb-0 text-primary">@Model.TotalStays</div>
                    </div>
                </div>

                <!-- ÚLTIMA VISITA -->
                <div class="col-12 col-md-3">
                    <div class="info-card p-3 shadow-sm rounded h-100 d-flex flex-column align-items-center justify-content-center">
                        <div class="mb-2">
                            <i class="fas fa-calendar-check fa-2x text-success"></i>
                        </div>
                        <div class="small text-muted">Última Visita</div>
                        <div class="h6 mb-0 text-success">
                            @(Model.LastStayDate?.ToString("dd/MM/yyyy") ?? "Nunca")
                        </div>
                    </div>
                </div>

                <!-- ORIGEN -->
                <div class="col-12 col-md-3">
                    <div class="info-card p-3 shadow-sm rounded h-100 d-flex flex-column align-items-center justify-content-center">
                        <div class="mb-2">
                            <i class="fas fa-route fa-2x text-info"></i>
                        </div>
                        <div class="small text-muted">Origen</div>
                        <div class="mt-1">
                            <span class="badge bg-info">@Model.SourceText</span>
                        </div>
                    </div>
                </div>

                <!-- ESTADO VIP/BLACKLIST -->
                <div class="col-12 col-md-3">
                    <div class="info-card p-3 shadow-sm rounded h-100 d-flex flex-column align-items-center justify-content-center">
                        <div class="mb-2">
                            <i class="fas fa-@(Model.IsVip ? "star" : Model.IsBlacklisted ? "ban" : "user-check") fa-2x text-@(Model.IsVip ? "warning" : Model.IsBlacklisted ? "danger" : "secondary")"></i>
                        </div>
                        <div class="small text-muted">Estado</div>
                        <div class="mt-1">
                            @if (Model.IsVip)
                            {
                                <span class="badge bg-warning"><i class="fas fa-star"></i> VIP</span>
                            }
                            else if (Model.IsBlacklisted)
                            {
                                <span class="badge bg-danger"><i class="fas fa-ban"></i> Blacklist</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Normal</span>
                            }
                        </div>
                    </div>
                </div>

            </div>

            @if (Model.IsBlacklisted && !string.IsNullOrEmpty(Model.BlacklistReason))
            {
                <div class="alert alert-danger mt-3 mb-0">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Razón de Blacklist:</strong> @Model.BlacklistReason
                </div>
            }
        </div>
    </div>

    <!-- ======================
         IDENTIFICACIÓN
         ====================== -->
    @if (!string.IsNullOrEmpty(Model.IdType) || !string.IsNullOrEmpty(Model.Curp) || Model.BirthDate != null)
    {
        <div class="section-card">
            <div class="section-header bg-warning">
                <i class="fas fa-id-card"></i> Identificación
            </div>
            <div class="section-body">
                <div class="row g-3">
                    @if (!string.IsNullOrEmpty(Model.IdType))
                    {
                        <div class="col-md-4">
                            <div class="detail-item">
                                <i class="fas fa-address-card text-warning me-2"></i>
                                <div>
                                    <small class="text-muted">Tipo de ID</small>
                                    <div><strong>@Model.IdTypeText</strong></div>
                                    @if (!string.IsNullOrEmpty(Model.IdNumber))
                                    {
                                        <small class="text-muted">No: @Model.IdNumber</small>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Curp))
                    {
                        <div class="col-md-4">
                            <div class="detail-item">
                                <i class="fas fa-fingerprint text-warning me-2"></i>
                                <div>
                                    <small class="text-muted">CURP</small>
                                    <div><strong>@Model.Curp</strong></div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (Model.BirthDate != null)
                    {
                        <div class="col-md-4">
                            <div class="detail-item">
                                <i class="fas fa-birthday-cake text-warning me-2"></i>
                                <div>
                                    <small class="text-muted">Fecha de Nacimiento</small>
                                    <div><strong>@Model.BirthDate?.ToString("dd/MM/yyyy")</strong></div>
                                    @if (Model.Age.HasValue)
                                    {
                                        <small class="text-muted">@Model.Age años</small>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- ======================
         DIRECCIÓN
         ====================== -->
    @if (!string.IsNullOrEmpty(Model.AddressStreet) || !string.IsNullOrEmpty(Model.AddressCity))
    {
        <div class="section-card">
            <div class="section-header bg-info">
                <i class="fas fa-map-marker-alt"></i> Dirección
            </div>
            <div class="section-body">
                <div class="row g-3">
                    <div class="col-md-12">
                        <div class="detail-item">
                            <i class="fas fa-home text-info me-2"></i>
                            <div>
                                <small class="text-muted">Domicilio Completo</small>
                                <div>
                                    <strong>
                                        @if (!string.IsNullOrEmpty(Model.AddressStreet))
                                        {
                                            @Model.AddressStreet
                                            <br />
                                        }
                                        @if (!string.IsNullOrEmpty(Model.AddressCity) || !string.IsNullOrEmpty(Model.AddressState))
                                        {
                                            @Model.AddressCity

                                            @(!string.IsNullOrEmpty(Model.AddressCity) && !string.IsNullOrEmpty(Model.AddressState) ? ", " : "")

                                            @Model.AddressState
                                            <br />
                                        }
                                        @if (!string.IsNullOrEmpty(Model.AddressZip) || !string.IsNullOrEmpty(Model.AddressCountry))
                                        {
                                            <text>CP: @Model.AddressZip - @Model.AddressCountry</text>
                                        }
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- ======================
         FACTURACIÓN
         ====================== -->
    @if (!string.IsNullOrEmpty(Model.BillingRfc) || !string.IsNullOrEmpty(Model.BillingBusinessName))
    {
        <div class="section-card">
            <div class="section-header" style="background: var(--tertiary); color: white;">
                <i class="fas fa-file-invoice"></i> Datos de Facturación
            </div>
            <div class="section-body">
                <div class="row g-3">
                    @if (!string.IsNullOrEmpty(Model.BillingRfc))
                    {
                        <div class="col-md-6">
                            <div class="detail-item">
                                <i class="fas fa-hashtag text-primary me-2"></i>
                                <div>
                                    <small class="text-muted">RFC</small>
                                    <div><strong>@Model.BillingRfc</strong></div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.BillingBusinessName))
                    {
                        <div class="col-md-6">
                            <div class="detail-item">
                                <i class="fas fa-building text-primary me-2"></i>
                                <div>
                                    <small class="text-muted">Razón Social</small>
                                    <div><strong>@Model.BillingBusinessName</strong></div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.BillingEmail))
                    {
                        <div class="col-md-6">
                            <div class="detail-item">
                                <i class="fas fa-envelope text-primary me-2"></i>
                                <div>
                                    <small class="text-muted">Email de Facturación</small>
                                    <div><strong>@Model.BillingEmail</strong></div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.BillingTaxRegime))
                    {
                        <div class="col-md-6">
                            <div class="detail-item">
                                <i class="fas fa-briefcase text-primary me-2"></i>
                                <div>
                                    <small class="text-muted">Régimen Fiscal</small>
                                    <div><strong>@Model.BillingTaxRegime</strong></div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.BillingAddress))
                    {
                        <div class="col-md-12">
                            <div class="detail-item">
                                <i class="fas fa-map-marked-alt text-primary me-2"></i>
                                <div>
                                    <small class="text-muted">Domicilio Fiscal</small>
                                    <div><strong>@Model.BillingAddress</strong></div>
                                    @if (!string.IsNullOrEmpty(Model.BillingZip))
                                    {
                                        <small class="text-muted">CP: @Model.BillingZip</small>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- ======================
         NOTAS
         ====================== -->
    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="section-card">
            <div class="section-header bg-dark">
                <i class="fas fa-sticky-note"></i> Notas Internas
            </div>
            <div class="section-body">
                <div class="alert alert-light mb-0">
                    <i class="fas fa-info-circle text-muted"></i>
                    @Model.Notes
                </div>
            </div>
        </div>
    }

    <!-- ======================
         INFORMACIÓN DE AUDITORÍA
         ====================== -->
    <div class="section-card">
        <div class="section-header bg-secondary">
            <i class="fas fa-clock"></i> Información de Auditoría
        </div>
        <div class="section-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="audit-item">
                        <i class="fas fa-plus-circle text-success me-2"></i>
                        <div>
                            <small class="text-muted">Fecha de Creación</small>
                            <div><strong>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</strong></div>
                            @if (!string.IsNullOrEmpty(Model.CreatedByName))
                            {
                                <small class="text-muted">Por: @Model.CreatedByName</small>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="audit-item">
                        <i class="fas fa-edit text-primary me-2"></i>
                        <div>
                            <small class="text-muted">Última Actualización</small>
                            <div><strong>@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</strong></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- BOTONES -->
<div class="mt-4 text-end">
    @if (!Model.IsBlacklisted)
    {
        <button type="button" class="btn btn-warning" onclick="Swal.close(); openEditModal('@Model.GuestId')">
            <i class="fas fa-edit"></i> Editar
        </button>
    }
    else
    {
        <button type="button" class="btn btn-success" onclick="Swal.close(); toggleBlacklist('@Model.GuestId', false)">
            <i class="fas fa-check-circle"></i> Quitar de Blacklist
        </button>
    }

    <button type="button" class="btn btn-secondary" onclick="Swal.close()">
        <i class="fas fa-times"></i> Cerrar
    </button>
</div>
