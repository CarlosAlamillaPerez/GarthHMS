@* Views/HourPackages/_DeleteConfirmation.cshtml *@
@model GarthHMS.Core.DTOs.HourPackage.HourPackageResponseDto

<div class="delete-confirmation text-center">
    <i class="fas fa-exclamation-triangle text-warning" style="font-size: 4rem;"></i>

    <h3 class="mt-3">¿Eliminar Paquete de Horas?</h3>

    <p class="text-muted mt-3">
        Estás a punto de eliminar el siguiente paquete:
    </p>

    <div class="alert alert-warning mt-3 text-start">
        <div class="row">
            <div class="col-md-12 mb-2">
                <strong><i class="fas fa-box"></i> Paquete:</strong> @Model.Name
            </div>
            <div class="col-md-6">
                <strong><i class="fas fa-bed"></i> Tipo:</strong> @Model.RoomTypeName
            </div>
            <div class="col-md-6">
                <strong><i class="fas fa-clock"></i> Duración:</strong> @Model.Hours horas
            </div>
            <div class="col-md-6">
                <strong><i class="fas fa-dollar-sign"></i> Precio:</strong> $@Model.Price.ToString("N2")
            </div>
            <div class="col-md-6">
                <strong><i class="fas fa-tag"></i> Estado:</strong>
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Activo</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactivo</span>
                }
            </div>
        </div>
    </div>

    <p class="text-danger mt-3">
        <i class="fas fa-info-circle"></i>
        <strong>Esta acción no se puede deshacer.</strong>
    </p>

    <p class="text-muted">
        El paquete se marcará como inactivo y no estará disponible para nuevas reservaciones.
    </p>

    <div class="mt-4">
        <button type="button" class="btn btn-secondary" onclick="Swal.close()">
            <i class="fas fa-times"></i> Cancelar
        </button>
        <button type="button" class="btn btn-danger" onclick="confirmDeleteAction('@Model.HourPackageId')">
            <i class="fas fa-trash"></i> Sí, Eliminar Paquete
        </button>
    </div>
</div>
