@model GarthHMS.Core.DTOs.Role.RoleResponseDto

<div class="text-center">
    <div class="mb-4">
        <i class="fas fa-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
    </div>

    <h4 class="mb-3">¿Eliminar Rol?</h4>

    <div class="alert alert-danger text-start">
        <h6><i class="fas fa-user-shield"></i> <strong>@Model.Name</strong></h6>
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="mb-0 small">@Model.Description</p>
        }
    </div>

    @if (Model.IsSystemRole)
    {
        <div class="alert alert-warning text-start">
            <i class="fas fa-lock"></i>
            <strong>No se puede eliminar:</strong> Este es un rol del sistema y no puede ser eliminado.
        </div>
    }
    else
    {
        <div class="alert alert-warning text-start">
            <i class="fas fa-exclamation-circle"></i>
            <strong>Advertencia:</strong>
            <ul class="mb-0 mt-2">
                <li>Esta acción no se puede deshacer</li>
                <li>Los usuarios con este rol quedarán sin rol asignado</li>
                <li>Se recomienda reasignar usuarios antes de eliminar</li>
            </ul>
        </div>

        <div class="mt-4">
            <button type="button" class="btn btn-secondary me-2" onclick="Swal.close()">
                <i class="fas fa-times"></i> Cancelar
            </button>
            <button type="button" class="btn btn-danger" onclick="confirmDeleteAction('@Model.RoleId')">
                <i class="fas fa-trash-alt"></i> Sí, Eliminar
            </button>
        </div>
    }

    @if (Model.IsSystemRole)
    {
        <div class="mt-3">
            <button type="button" class="btn btn-secondary" onclick="Swal.close()">
                <i class="fas fa-arrow-left"></i> Volver
            </button>
        </div>
    }
</div>