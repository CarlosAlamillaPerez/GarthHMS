@{
    ViewData["Title"] = "Tipos de Habitación";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-bed"></i> Tipos de Habitación
            </h1>
            <p class="text-muted">Gestiona las categorías de habitaciones del hotel</p>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-primary" onclick="openCreateModal()">
                <i class="fas fa-plus"></i> Nuevo Tipo
            </button>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <!-- ============================================ -->
        <!-- BOOTSTRAP TABLE -->
        <!-- ============================================ -->
        <div id="toolbar"></div>

        <table id="roomTypesTable"
               class="table table-hover text-center"
               data-toggle="table"
               data-icons-prefix="bi"
               data-icons="{
                'columns': 'bi-layout-three-columns',
                'search': 'bi-search',
                'clearSearch': 'bi-x-circle',
                'sortable': 'bi-arrow-down-up',
                'paginationSwitchDown': 'bi-caret-down',
                'paginationSwitchUp': 'bi-caret-up'
              }"
               data-toolbar="#toolbar"
               data-search="true"
               data-show-refresh="true"
               data-show-columns="true"
               data-show-export="true"
               data-pagination="true"
               data-page-size="10"
               data-page-list="[10,25,50,100]"
               data-icons-prefix="fa">
            <thead>
                <tr>
                    <th data-field="code" data-sortable="true">Código</th>
                    <th data-field="name" data-sortable="true">Nombre</th>
                    <th data-field="capacityDisplay" data-sortable="true">Capacidad</th>
                    <th data-field="basePriceNightly" data-sortable="true" data-formatter="priceFormatter">Precio/Noche</th>
                    <th data-field="basePriceHourly" data-sortable="true" data-formatter="priceFormatter">Precio/Hora</th>
                    <th data-field="isActive" data-sortable="true" data-formatter="statusFormatter">Estado</th>
                    <th data-field="actions" data-formatter="actionsFormatter">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- Los datos se cargan dinámicamente vía JavaScript -->
            </tbody>
        </table>
        <!-- ============================================ -->
    </div>
</div>

@section Scripts {
    <script src="~/js/settings/room-types.js"></script>
}
