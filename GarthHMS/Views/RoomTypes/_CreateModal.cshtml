<form id="createForm" class="text-start">
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="createName" class="form-label d-flex align-items-center justify-content-center">Nombre <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="createName" name="Name" required maxlength="50">
                <div class="invalid-feedback">El nombre es requerido</div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label for="createCode" class="form-label d-flex align-items-center justify-content-center">Código <span class="text-danger">*</span></label>
                <input type="text" class="form-control text-uppercase" id="createCode" name="Code" required maxlength="10">
                <div class="invalid-feedback">El código es requerido</div>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label for="createDescription" class="form-label d-flex align-items-center justify-content-center">Descripción</label>
        <textarea class="form-control" id="createDescription" name="Description" rows="2" maxlength="500"></textarea>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="createBaseCapacity" class="form-label d-flex align-items-center justify-content-center">Capacidad Base <span class="text-danger">*</span></label>
                <input type="number" class="form-control" id="createBaseCapacity" name="BaseCapacity" required min="1" max="20" value="2">
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label for="createMaxCapacity" class="form-label d-flex align-items-center justify-content-center">Capacidad Máxima <span class="text-danger">*</span></label>
                <input type="number" class="form-control" id="createMaxCapacity" name="MaxCapacity" required min="1" max="20" value="2">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="createBasePriceNightly" class="form-label">Precio Base (Noche)</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="number" class="form-control" id="createBasePriceNightly" name="BasePriceNightly" step="0.01" min="0" value="0">
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label for="createBasePriceHourly" class="form-label">Precio Base (Hora)</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="number" class="form-control" id="createBasePriceHourly" name="BasePriceHourly" step="0.01" min="0" value="0">
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="createExtraPersonCharge" class="form-label">Cargo Persona Extra</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="number" class="form-control" id="createExtraPersonCharge" name="ExtraPersonCharge" step="0.01" min="0" value="0">
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label d-block">Mascotas</label>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="createAllowsPets" name="AllowsPets">
                    <label class="form-check-label" for="createAllowsPets">Permite Mascotas</label>
                </div>
            </div>
        </div>
    </div>

    <div class="row" id="createPetChargeGroup" style="display: none;">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="createPetCharge" class="form-label">Cargo por Mascota</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="number" class="form-control" id="createPetCharge" name="PetCharge" step="0.01" min="0" value="0">
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="mb-3">
                <label for="createSizeSqm" class="form-label">Tamaño (m²)</label>
                <input type="number" class="form-control" id="createSizeSqm" name="SizeSqm" step="0.01" min="0">
            </div>
        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <label for="createBedType" class="form-label">Tipo de Cama</label>
                <input type="text" class="form-control" id="createBedType" name="BedType" maxlength="50" placeholder="Ej: 1 King">
            </div>
        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <label for="createViewType" class="form-label">Tipo de Vista</label>
                <input type="text" class="form-control" id="createViewType" name="ViewType" maxlength="50" placeholder="Ej: Al mar">
            </div>
        </div>
    </div>

    <div class="text-end mt-3">
        <button type="button" class="btn btn-secondary me-2" onclick="Swal.close()">
            <i class="fas fa-times"></i> Cancelar
        </button>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Crear Tipo
        </button>
    </div>
</form>

<script>
    // Mostrar/ocultar cargo por mascota
    $('#createAllowsPets').on('change', function() {
        if ($(this).is(':checked')) {
            $('#createPetChargeGroup').slideDown();
        } else {
            $('#createPetChargeGroup').slideUp();
            $('#createPetCharge').val(0);
        }
    });
</script>