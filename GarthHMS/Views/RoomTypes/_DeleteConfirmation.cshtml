@model GarthHMS.Core.DTOs.RoomType.RoomTypeResponseDto

<div class="text-center">
    <div class="mb-4">
        <i class="fas fa-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
    </div>

    <h4 class="mb-3">¿Estás seguro?</h4>

    <p class="text-muted mb-4">
        Estás a punto de eliminar el tipo de habitación:
    </p>

    <div class="alert alert-warning" role="alert">
        <strong>@Model.Code - @Model.Name</strong>
    </div>

    <p class="text-muted mb-4">
        <small>Esta acción desactivará el tipo de habitación. No se eliminará permanentemente.</small>
    </p>

    <div class="d-flex justify-content-center gap-2 mt-4">
        <button type="button" class="btn btn-secondary" onclick="Swal.close()">
            <i class="fas fa-times"></i> Cancelar
        </button>
        <button type="button" class="btn btn-danger" onclick="confirmDeleteAction('@Model.RoomTypeId')">
            <i class="fas fa-trash"></i> Sí, Eliminar
        </button>
    </div>
</div>