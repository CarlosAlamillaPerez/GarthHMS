@model GarthHMS.Core.DTOs.Room.RoomResponseDto

<div class="text-center py-4">
    <!-- Icono de advertencia -->
    <div class="mb-4">
        <i class="fas fa-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
    </div>

    <!-- Mensaje principal -->
    <h4 class="mb-3">¿Eliminar Habitación?</h4>

    <p class="mb-4">
        Estás a punto de eliminar la habitación:
    </p>

    <!-- Información de la habitación -->
    <div class="card bg-light mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <strong>Número:</strong> @Model.RoomNumber
                </div>
                <div class="col-md-6">
                    <strong>Tipo:</strong> @Model.RoomTypeName
                </div>
                <div class="col-md-6">
                    <strong>Piso:</strong> @Model.FloorDisplay
                </div>
                <div class="col-md-6">
                    <strong>Estado:</strong>
                    <span class="@Model.StatusBadgeClass">@Model.StatusText</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Advertencias -->
    @if (Model.IsOccupied)
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <i class="fas fa-ban me-2"></i>
            <div>
                <strong>¡No se puede eliminar!</strong> Esta habitación está ocupada actualmente.
            </div>
        </div>
    }
    else if (Model.Status == GarthHMS.Core.Enums.RoomStatus.Reserved)
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <i class="fas fa-ban me-2"></i>
            <div>
                <strong>¡No se puede eliminar!</strong> Esta habitación tiene una reserva activa.
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            <div>
                Esta acción realizará un <strong>soft delete</strong>. La habitación se marcará como inactiva
                pero permanecerá en el sistema.
            </div>
        </div>
    }

    <!-- Botones -->
    <div class="mt-4">
        <button type="button" class="btn btn-secondary me-2" onclick="Swal.close()">
            <i class="fas fa-times"></i> Cancelar
        </button>

        @if (!Model.IsOccupied && Model.Status != GarthHMS.Core.Enums.RoomStatus.Reserved)
        {
            <button type="button" class="btn btn-danger" onclick="confirmDeleteAction('@Model.RoomId')">
                <i class="fas fa-trash"></i> Sí, Eliminar
            </button>
        }
    </div>
</div>