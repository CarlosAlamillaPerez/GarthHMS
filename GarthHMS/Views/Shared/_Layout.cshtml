<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Garth HMS</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom/theme.css" asp-append-version="true" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- HEADER -->
        <header class="main-header">
            <div class="header-left">
                <button class="sidebar-toggle" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="brand">Garth HMS</h1>
            </div>

            <div class="header-right">
                <!-- Tema Toggle -->
                <button class="btn-icon" id="themeToggle" title="Cambiar tema">
                    <i class="fas fa-moon"></i>
                </button>

                <!-- Usuario Dropdown -->
                <div class="user-dropdown">
                    <button class="user-btn" id="userMenuBtn">
                        <img src="~/img/default-avatar.png" alt="Avatar" class="user-avatar" />
                        <span>@User.Identity.Name</span>
                        <i class="fas fa-chevron-down"></i>
                    </button>
                    <div class="dropdown-menu" id="userMenu">
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-user"></i> Mi Perfil
                        </a>
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-cog"></i> Configuración
                        </a>
                        <div class="dropdown-divider"></div>
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="dropdown-item">
                                <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </header>

        <!-- SIDEBAR -->
        <aside class="sidebar" id="sidebar">
            <nav class="sidebar-nav">
                <a asp-controller="Home" asp-action="Index" class="nav-item active">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
                <a href="#" class="nav-item">
                    <i class="fas fa-calendar-alt"></i>
                    <span>Reservas</span>
                </a>
                <a href="#" class="nav-item">
                    <i class="fas fa-users"></i>
                    <span>Huéspedes</span>
                </a>
                <a href="#" class="nav-item">
                    <i class="fas fa-bed"></i>
                    <span>Habitaciones</span>
                </a>
                <a href="#" class="nav-item">
                    <i class="fas fa-dollar-sign"></i>
                    <span>Finanzas</span>
                </a>
                <a asp-controller="Configuration" asp-action="Index" class="nav-item">
                    <i class="fas fa-cog"></i>
                    <span>Configuración</span>
                </a>
            </nav>
        </aside>

        <!-- MAIN CONTENT -->
        <main class="main-content">
            @RenderBody()
        </main>
    }
    else
    {
        <!-- LOGIN PAGE (sin header ni sidebar) -->
        @RenderBody()
    }

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/common.js" asp-append-version="true"></script>
    <script src="~/js/custom/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>