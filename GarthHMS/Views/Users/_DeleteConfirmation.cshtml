@model GarthHMS.Core.DTOs.User.UserResponseDto

<div class="text-center p-4">
    <div class="mb-4">
        <i class="fas fa-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
    </div>

    <h4 class="mb-3">¿Confirmar Eliminación?</h4>

    <div class="alert alert-warning text-start">
        <strong>¿Estás seguro de eliminar este usuario?</strong>
        <div class="mt-2">
            <i class="fas fa-user me-2"></i>
            <strong>@Model.FullName</strong>
        </div>
        <div class="mt-1">
            <i class="fas fa-envelope me-2"></i>
            @Model.Email
        </div>
        <div class="mt-1">
            <i class="fas fa-user-tag me-2"></i>
            Rol: <strong>@Model.RoleName</strong>
        </div>
    </div>

    <div class="alert alert-info text-start">
        <i class="fas fa-info-circle"></i>
        <strong>Nota:</strong> Esta acción desactivará al usuario. El usuario no podrá acceder al sistema pero su información se conservará para auditoría.
    </div>

    <div class="d-flex justify-content-center gap-2 mt-4">
        <button type="button" class="btn btn-secondary" onclick="Swal.close()">
            <i class="fas fa-times"></i> Cancelar
        </button>
        <button type="button" class="btn btn-danger" onclick="confirmDeleteAction('@Model.UserId')">
            <i class="fas fa-trash"></i> Sí, Eliminar
        </button>
    </div>
</div>