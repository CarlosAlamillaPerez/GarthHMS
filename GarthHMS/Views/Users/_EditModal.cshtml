@model GarthHMS.Core.DTOs.User.UpdateUserDto

<form id="editForm" class="text-start">
    <input type="hidden" name="UserId" value="@Model.UserId" />

    <!-- Información Personal -->
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="editFirstName" class="form-label d-flex align-items-center justify-content-left">
                    Nombre <span class="text-danger">*</span>
                </label>
                <input type="text"
                       class="form-control"
                       id="editFirstName"
                       name="FirstName"
                       value="@Model.FirstName"
                       required
                       maxlength="50">
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label for="editLastName" class="form-label d-flex align-items-center justify-content-left">
                    Apellido <span class="text-danger">*</span>
                </label>
                <input type="text"
                       class="form-control"
                       id="editLastName"
                       name="LastName"
                       value="@Model.LastName"
                       required
                       maxlength="50">
            </div>
        </div>
    </div>

    <!-- Email y Teléfono -->
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="editEmail" class="form-label d-flex align-items-center justify-content-left">
                    Email <span class="text-danger">*</span>
                </label>
                <input type="email"
                       class="form-control"
                       id="editEmail"
                       name="Email"
                       value="@Model.Email"
                       required
                       maxlength="100">
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label for="editPhone" class="form-label d-flex align-items-center justify-content-left">
                    Teléfono
                </label>
                <input type="tel"
                       class="form-control"
                       id="editPhone"
                       name="Phone"
                       value="@Model.Phone"
                       maxlength="20">
            </div>
        </div>
    </div>

    <!-- Usuario y Rol -->
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="editUsername" class="form-label d-flex align-items-center justify-content-left">
                    Nombre de Usuario <span class="text-danger">*</span>
                </label>
                <input type="text"
                       class="form-control"
                       id="editUsername"
                       name="Username"
                       value="@Model.Username"
                       required
                       maxlength="50">
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label for="editRoleId" class="form-label d-flex align-items-center justify-content-left">
                    Rol <span class="text-danger">*</span>
                </label>
                <select class="form-select"
                        id="editRoleId"
                        name="RoleId"
                        required>
                    @if (ViewBag.Roles != null)
                    {
                        @foreach (var role in ViewBag.Roles)
                        {
                            <option value="@role.RoleId"
                                    selected="@(role.RoleId == Model.RoleId)">
                                @role.Name
                            </option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>

    <!-- Estado -->
    <div class="form-check mb-3">
        <input class="form-check-input"
               type="checkbox"
               id="editIsActive"
               name="IsActive"
               @(Model.IsActive ? "checked" : "")>
        <label class="form-check-label" for="editIsActive">
            <i class="fas fa-check-circle text-success me-1"></i>
            Usuario Activo
        </label>
    </div>

    <!-- Botones -->
    <div class="mt-4 text-end">
        <button type="button" class="btn btn-secondary" onclick="Swal.close()">
            <i class="fas fa-times"></i> Cancelar
        </button>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Actualizar
        </button>
    </div>
</form>